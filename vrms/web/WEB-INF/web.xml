<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.vrms.authentication.core.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>CookieHacker</servlet-name>
        <servlet-class>com.vrms.authentication.core.CookieHacker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DBOperator</servlet-name>
        <servlet-class>com.vrms.authentication.DBOperator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServiceLoginAuth</servlet-name>
        <servlet-class>com.vrms.authentication.ServiceLoginAuth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieHacker</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>DBOperator</servlet-name>
        <url-pattern>/db</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServiceLoginAuth</servlet-name>
        <url-pattern>/ServiceLoginAuth</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
